<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <TextView
        android:id="@+id/profile_greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/blue_sapphire"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/profile_user_picture"
        android:src="@drawable/usericon"
        android:layout_below="@id/profile_greetings"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/emailProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_user_picture"
        android:textColor="@color/blue_sapphire"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:id="@+id/firstNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailProfile"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="First Name: "
        android:textColor="@color/blue_sapphire"

        android:textSize="20sp" />


    <TextView
        android:id="@+id/profile_name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/firstNameTitle"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/emailProfile"
        android:textColor="@color/blue_sapphire"
        android:layout_marginTop="20dp"

        />
    <TextView
        android:id="@+id/surNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstNameTitle"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="Surame: "
        android:textColor="@color/blue_sapphire"
        android:textSize="20sp" />




    <TextView
        android:id="@+id/profile_surname_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name_display"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/blue_sapphire"
        android:layout_toEndOf="@id/surNameTitle"
        android:layout_marginTop="20dp"

        />



    <Button
        android:id="@+id/profile_edit_detailsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_surname_display"
        android:text="Edit Profile"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons"
        android:textColor="@color/magnolia"
        android:padding="17dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/profile_logOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Logout"
        android:layout_below="@+id/profile_edit_detailsBtn"
        android:layout_marginTop="20dp"
        android:background="@drawable/button1"
        android:textColor="@color/magnolia"
        android:padding="17dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/profile_toMainPageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_logOutBtn"
        android:layout_alignParentRight="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button2"
        android:padding="17dp"
        android:text="Back to Main Page"
        android:textAllCaps="false"
        android:textColor="@color/red_salsa"
        android:textSize="18sp"
        android:textStyle="bold" />





</RelativeLayout>